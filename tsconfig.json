{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["tests/pages/*"],
      "@utils/*": ["tests/utils/*"],
      "@fixtures/*": ["tests/fixtures/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["tests/**/*", "config/**/*"],
  "exclude": ["node_modules", "dist"]
}
